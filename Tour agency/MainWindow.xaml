<Window x:Class="Tour_agency.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tour_agency"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="MainWindow" Height="450" Width="350"
        AllowsTransparency="True" Background="Transparent"
        WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
        </Grid>
        
        <Border Margin="7" CornerRadius="20" Grid.RowSpan="2" MouseLeftButtonDown="Border_MouseLeftButtonDown">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#67B26F" Offset="0.0"/>
                    <GradientStop Color="#4ca2cd" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="LightGray" />
            </Border.Effect>
        </Border>

        <StackPanel HorizontalAlignment="Center">
            <Image Source="image/travel.png" Width="90" Margin="0 30 0 0"/>
            <TextBlock Text="Travel Agency" FontSize="30" FontFamily="Californian FB" TextAlignment="Center" />
            <StackPanel Orientation="Horizontal" Margin="0 10 0 0" >
                <Button x:Name="btnLogin" Content="Log in" FontWeight="Bold" Margin="0 0 50 0" Background="Transparent" BorderBrush="{x:Null}" Click="Log_in" />

                <Button x:Name="btnRegister" Content="Registration" Margin="50 0 0 0" Background="Transparent" BorderBrush="{x:Null}" Click="Register" />
            </StackPanel>
            <TextBox x:Name="Login" materialDesign:HintAssist.Hint="Введите логин" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
            <PasswordBox x:Name="Pass" materialDesign:HintAssist.Hint="Введите пароль" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"/>
            <PasswordBox x:Name="CheckPass" materialDesign:HintAssist.Hint="Повторите пароль" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" Visibility="Collapsed" />
            <TextBox x:Name="Email" materialDesign:HintAssist.Hint="Введите почту" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Visibility="Collapsed"/>
        </StackPanel>

    </Grid>
</Window>
